{
  "name": "mimodal",
  "version": "0.0.1",
  "description": "Lightweight all purpose modal written in vanilla js",
  "main": "src/main.js",
  "files": [
    "dist/mimodal.js",
    "dist/mimodal.css"
  ],
  "scripts": {
    "build": "webpack",
    "lint": "eslint ./src/js --ext .js || true",
    "test": "mocha --compilers js:babel-register && webpack -p --bail",
    "dev": "webpack -d | webpack-dev-server -d"
  },
  "repositories": [{
    "type": "git",
    "url": "git@github.com:Draggable/mimodal.git"
  }],
  "keywords": [
    "mini modal",
    "minimal modal",
    "mimodal",
    "vanilla js modal",
    "popup",
    "es6",
    "babel",
    "webpack"
  ],
  "author": "Kevin Chappell",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Draggable/mimodal/issues"
  },
  "homepage": "https://draggable.github.io/mimodal",
  "devDependencies": {
    "autoprefixer": "^6.3.5",
    "babel-core": "^6.7.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-runtime": "^6.6.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.7.2",
    "clean-webpack-plugin": "^0.1.8",
    "eslint": "^2.6.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "mocha": "^2.4.5",
    "node-sass": "^3.4.2",
    "postcss-loader": "^0.8.2",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "no-console": 0,
      "new-cap": 0,
      "strict": 0,
      "no-underscore-dangle": 0,
      "no-use-before-define": 0,
      "eol-last": 0,
      "quotes": [2, "single"]
    }
  }
}
